<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="6dp"
        android:background="#93cbff"
        android:maxLines="1"
        android:text="Category"
        android:textAlignment="center"
        android:textColor="#5e61ff"
        android:textSize="10pt"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/list_background">

        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Category"
            android:textAlignment="center"
            android:textColor="#0094a4"
            android:textSize="10pt"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_bookmark"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/txtReminderContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtAlarmTime"
            android:layout_alignParentStart="true"
            android:layout_marginStart="19dp"
            android:text="ReminderContent"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="italic"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/txtAlarmTime"
            android:background="#9c9c9c"/>

        <TextView
            android:id="@+id/textRepeat"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:maxLines="1"
            android:text="Repeat Time"
            android:textAlignment="textEnd"
            android:textSize="10pt"
            android:layout_alignBaseline="@+id/txtCategory"
            android:layout_alignBottom="@+id/txtCategory"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/txtAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textRepeat"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:text="AlarmTime"/>

    </RelativeLayout>
</RelativeLayout>